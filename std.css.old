body { background-color: #a60000; margin: auto; width: 960px; } /*background-image: url('/docs/rand/background.jpg'); background-repeat: repeat-y; background-position: center top; }*/
a { color: white; }
div#title { font-size: 25px; width: 950px; background: #057d9f; border: outset 2px white; margin: 5px 0px 5px 0px; padding-left: 10px; }
div#nav { font-size: 17px; width: 250px; float: left; background-color: #ff7373; border: outset 2px white; }
div#nav li { list-style: none; margin-left: -20px; }
div#nav div.item { width: 200px; }
div#nav div.item a:link { color: black; text-decoration: none; }
div#nav div.item a:visited { color: black; text-decoration: none; }
div#nav div.item a:hover { text-decoration: underline; font-weight: bold }
div#nav a.new { font-style: italic; font-weight: bold }
div#nav a.d0 { padding-left: 0px; padding-right: 60px; }
div#nav a.d1 { padding-left: 20px; padding-right: 40px; }
div#nav a.d2 { padding-left: 40px; padding-right: 20px; }
div#nav a.d3 { padding-left: 60px; padding-right: 0px; }
div#content { width: 700px; background-color: #FF7373; border: outset 2px white; margin-left: 260px; }
div#thumbs img { margin: 5px 12px; border: solid 1px black; }
div#thumbs img.new { border: solid 1px white; }
div#files { margin-left: 10px; }
div#files thead td { border-bottom: solid 1px black; }
div#files table { width: 600px; }
div#files td.type { width: 25px; text-align: left; }
div#files td.title { width: 350px; text-align: left; }
div#files td.date { width: 200px; text-align: right; }
div#files a { text-decoration: none; }
div#files a.new { font-weight: bold; }
div#footer{ clear: both; width: 940px; background-color: #057d9f; border: outset 2px white; margin: 5px 0px 2px 0px; padding: 0 10px; }

.left-side { float: left; }
.right-side { float: right; }
